{
  "name": "@dswallet/contracts",
  "version": "1.0.6",
  "description": "Protobuf definitions and generated TypeScript types",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "generate": "mkdir -p gen && protoc -I ./proto ./proto/*.proto --ts_proto_out=./gen --ts_proto_opt=nestJs=true,package=omit"
  },
  "files": [
    "dist",
    "proto",
    "gen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dswallet/contracts"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "author": {
    "name": "dsprog",
    "email": "sarkisyan.deni@mail.ru"
  },
  "dependencies": {
    "@nestjs/microservices": "^11.1.12",
    "rxjs": "^7.8.2",
    "ts-proto": "^2.11.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3"
  }
}
